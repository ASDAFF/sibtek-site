{
  "dependencies": {
    "front-end-gulp-pattern": "^1",
    "gulp-stylus": "^1.3.4",
    "gulp-browserify": "~0.5",
    "gulp-uglify": "^1.0.1",
    "liveify-stable": "^1",
    "LiveScript": "1.3.1",

    "nib": "^1.0.4",

    "bower": "^1"
  },
  "scripts": {
    "postinstall": "./deploy.sh"
  },

  "gulp": {
    "distclean": [
      "./front-end-gulp",
      "./node_modules",
      "./bower_components"
    ],
    "styles": {
      "client": {
        "type": "stylus",
        "path": "./front-end-sources/client/styles/",
        "srcDir": "./front-end-sources/client/styles/",
        "mainSrc": "main.styl",
        "destDir": "./static/",
        "buildFile": "client-build.css",
        "shim": [
          "./stylus-shim/nib"
        ]
      }
    }
  }
}
