.top-card.ui.inverted.black.vertical.segment
	reset-box-model()
	size 100%
	min-height 600px
	position relative

	.slider
		fixed left 0 top 0
		z-index 1
		overflow hidden
		size 100%

		ul.slides
			reset-box-model()
			list-style none
			size 100%
			display block
			overflow hidden
			white-space nowrap

			>li
				display inline-block
				size 100%
				z-index 1
				absolute left 0 top 0

				for num in (1..20)
					&:nth-child({num})
						z-index (20 - num)

				>img
					display block
					relative left 50% top 50%
					transform translate(-50%, -50%)
					size auto
					min-width 100%
					min-height 100%

	drop-shdw($color=alpha(black, 40%))
		text-shadow 2px 2px 5px $color !important

	.hgrid
		display table
		size 100%

		.row
			display table-row

			&:nth-child(2)
				height 1%

		.company-info, .sub
			position relative

		.company-info
			z-index 3
			padding-top ($main-margin * 3)

			.inner-container
				max-width $width-limit
				margin 0 auto
				position relative
				box-sizing border-box
				padding-x ($main-margin * 2)

			h1.logo.ui.header.inverted
				$fs = 40px
				custom-font('PT Sans Bold', $fs, ($fs + 2))
				text-transform uppercase

				& > *
					display inline-block
					vertical-align middle

				img
					size ($fs + 10px)

				span
					drop-shdw()

			.advantages
				margin-left 7px
				padding-top 14px
				drop-shdw()

				.inner-box
					$fs = 22px
					font-metrics $fs ($fs + 2)

					& + .inner-box
						margin-top 25px

			.main-menu
				absolute right ($main-margin * 2) top 4px
				.ui.inverted.button
					drop-shdw()
					transition text-shadow $anim-speed $anim-curve,
						background-color $anim-speed $anim-curve,
						color $anim-speed $anim-curve
					&:hover
						drop-shdw(alpha(white, 0%))
					&.dropdown
						padding-right 40px
						.icon
							absolute top 50% right 18px
							transform translateY(-50%)

		.sub
			z-index 2
			text-align center
			padding-bottom ($main-margin * 2)

			.ui.horizontal.divider.inverted
				padding-y 5px
				drop-shdw()

			.phone-container
				padding-top $main-margin
				padding-bottom $main-margin

				a, a:hover
					color white
					$fs = 28px
					font-metrics $fs ($fs + 2px)
					drop-shdw()

.content-container
	position relative
	z-index 15
	background white

	& .ui.page.grid:first-child
		margin-top 0
		padding-top ($main-margin)
