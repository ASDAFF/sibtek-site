@require 'nib'

@import 'variables'
@import 'mixins'
@import 'fonts'

global-reset()
reset-html5()

html, body
	min-height 100%

body
	custom-font('PT Sans')
	min-width $min-width

header
	@import 'header'

.ui.inverted.menu.fixed, body.index-page .main-menu
	.item.dropdown
		.menu a
			transition background-color $anim-speed $anim-curve
		.menu a:hover
			background #eaeaea

.top-part
	position relative
	z-index 40
	min-height 100%
	
	>:last-child:after
		pseudo-block()
		clear both
		size 100% ($footer-height + ($main-margin * 3))
		background white

body
	@import 'body'

body.index-page
	@import 'pages/index'

body.contacts-page
	@import 'pages/contacts'

footer.ui.inverted.black.vertical.segment
	@import 'footer'
