body
	font-family 'PT Sans', sans-serif !important

.inner-container
	margin 0 auto
	position relative
	width 1100px
	height auto


.login-container
	margin 0 auto
	position relative
	width 400px
	height auto


.content-container
	position absolute
	top 100px
	width 100%
	height auto
	min-height 100px
	padding-bottom 100px !important

a.header-item
	color #333 !important

	&:hover
		color #fff !important

.js-files-input, .js-main-image-input, .js-photo-upload-input
	display none

.uploaded-files, .uploaded-images
	position relative
	float left
	width 100%
	margin-top 30px
	margin-bottom 80px

.uploaded-image
	width 400px
	height auto

.js-file-ico
	position absolute
	right 20px
	cursor pointer

.main-photo-label, .main-photo-label-button
	position absolute !important
	right 20px
	top 40px


.main-photo-label-button
	z-index 20

img.main-photo-area
	width 100%
	height auto
