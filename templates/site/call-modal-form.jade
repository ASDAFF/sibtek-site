form#call-me-form.ui.modal.small(
	data-incorrect=local.formErrors.incorrect
	data-required=local.formErrors.required
)
	i.close.icon
	.header Заказать звонок
	.content
		.ui.form.js-modal-form
			.field
				.ui.small.input
					.required.field
						label Ваше имя
						.ui.pointing.below.label
						input.call-me-form-name(type="text", name="call-me-form-name")
			.field
				.ui.small.input
					.required.field
						label Телефон
						.ui.pointing.below.label
						input.call-me-form-phone(type="text", name="call-me-form-phone")
			.field
				.ui.small.input
					.field
						label Электронная почта
						.ui.pointing.below.label
						input.call-me-form-email(type="text", name="call-me-form-email")
	.actions
		.ui.button.cancel Отмена
		.ui.button.green.ok Заказать
