extends adm-layout
block content
	.login-container
		form.ui.form.js-add-user-form
			h2 Добавить нового пользователя
			h4.ui.dividing.header Логин
			.field
				.ui.corner.labeled.input
					input.username(type="text", placeholder="Логин")
					.ui.corner.label
							i.asterisk.icon
			h4.ui.dividing.header Пароль
			.field
				.ui.corner.labeled.input
					input.pass(type="text", placeholder="Пароль")
					.ui.corner.label
						i.asterisk.icon
			
			input.ui.button.green.js-add-user(type="submit", value="Добавить")
			a.ui.button(href="/admin/system/users/list") Отменить
