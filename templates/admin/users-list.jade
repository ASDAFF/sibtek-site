extends adm-layout
block content
	.inner-container
		if users.length > 0
			.ui.divided.items
				h2 Пользователи
				.item.header-item
					a.header-item.ui.button.inverted.black(href="/admin/system/users/add")
						|  Добавить
				for item in users
					.item.js-list-item
						.ui.tiny.image
							a(href="/admin/system/#{type}/edit/#{item._id}")
								i.ui.icon.write.circular.inverted
							a.js-remove(href="#", data-id="#{item._id}", data-type="#{type}")
								i.ui.icon.remove.circular.inverted
						.middle.aligned.content
							.header #{item.username}
		else
			h2 Пользователи
			.ui.section.divider
			.ui.icon.message
				i.inbox.icon
				.content
					.header Никого не найдено
					p
						a.ui.button.green(href="/admin/system/users/add") Добавить
	include remove-element-modal
